{% extends 'base.html.twig' %}
 {% block title %}EventTrack{% endblock %}

{% block body %} 
  {% if events%}
    <table id="events" class="table table-striped">
      <thead>
        <tr>
          <th>Event Title</th>
          <th>Image</th>
          <th>Description</th>
          <th>Contact</th>
          <th>Event date</th>
          <th>Start time</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for event in events %}
          <tr>
            <td>{{ event.title }}</td>
             <td><img src="{{ asset("public/image/#{event.image}") }}"/></td>
             <td>{{ event.getDescription() }}</td>
             <td>{{ event.getContact() }}</td>
             <td>{{ event.getEventDate()|date }}</td>
             <td>{{ event.getStartTime()|date }}</td>
              <td>
              <a href="/event/{{event.id}}" class="btn btn-info">Show</a>
              <a href="/event/edit/{{event.id}}" class="btn btn-light">Edit</a>
              <a href="#" class="btn btn-danger delete-event" data-id="{{event.id}}">Delete</a>
              </tr>
        {% endfor %}
      </tbody>
    </table>
  {% else %}
    <p>No events to display</p>
  {% endif %}
{% endblock %}

