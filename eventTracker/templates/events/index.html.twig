{% extends 'base.html.twig' %}
 {% block title %}EventTrack{% endblock %}

{% block body %} 

  {% if events%}
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Article Title</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for event in events %}
          <tr>
            <td>{{ event }}</td>
            <td>
              <a href="/event/1" class="btn
              btn-dark">Show</a>
               <a href="#" class="btn btn-danger delete-article" data-id="{{ event }}">Delete</a>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  {% else %}
    <p>No events to display</p>
  {% endif %}
{% endblock %}